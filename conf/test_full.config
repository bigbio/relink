/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running full-size tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run bigbio/relink -profile test_full,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data
    // TODO: Update with full test data paths
    input  = "${projectDir}/assets/samplesheet_test_full.csv"

    // Reference data
    fasta               = null  // TODO: Add full test FASTA
    xi_linear_config    = null  // TODO: Add full test config
    xi_crosslink_config = null  // TODO: Add full test config

    // Pipeline options
    do_recalibration        = true
    do_crosslinking_search  = true
    do_fdr                  = true
    do_mass_error_plots     = true
    link_fdr                = 5
}
